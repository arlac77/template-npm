{
  "name": "{{fullName}}",
  "description": "{{description}}",
  "packageManager": "npm@11.6.4+sha512.1118cab46a05a50aee6bff5b1b4fa1df18afff89d57465620a3518035026955db87c5bdf9d207b07b7487d99f2490d450cb774655ad63ec2cba7bf1d0ad25d45",
  "template": {
    "mergers": [
      {
        "type": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(actions): ",
          "mergeHints": {
            "": {
              "orderBy": [
                "name",
                "on",
                "permissions",
                "env",
                "defaults",
                "concurrency",
                "jobs"
              ]
            },
            "jobs": {
              "orderBy": [
                "test",
                "test-node",
                "test-browser",
                "release",
                "finish"
              ]
            },
            "jobs.test-node": {
              "orderBy": [
                "name",
                "needs",
                "if",
                "runs-on",
                "timeout-minutes",
                "strategy",
                "permissions",
                "defaults",
                "concurrency",
                "outputs",
                "env",
                "environments",
                "services",
                "steps"
              ]
            },
            "jobs.release": {
              "orderBy": [
                "name",
                "needs",
                "if",
                "runs-on",
                "strategy",
                "permissions",
                "defaults",
                "concurrency",
                "outputs",
                "env",
                "environments",
                "services",
                "steps"
              ]
            },
            "jobs.finish": {
              "orderBy": [
                "name",
                "needs",
                "if",
                "runs-on",
                "strategy",
                "permissions",
                "defaults",
                "concurrency",
                "outputs",
                "env",
                "environments",
                "services",
                "steps"
              ]
            },
            "*.node-version": {
              "scope": "deps",
              "merge": "mergeVersionsPreferNumeric"
            },
            "*.steps": {
              "key": "id|name|uses|run",
              "normalizeValue": "@.*",
              "orderBy": [
                "checkout",
                "git checkout",
                "prepare",
                "prepare node",
                "prepare CodeQL",
                "initialize CodeQL",
                "cleanup",
                "remove lock",
                "install",
                "install dependencies",
                "install playwright",
                "install npm",
                "npm install",
                "test",
                "test and coverage",
                "coveralls",
                "docs",
                "run docs",
                "release",
                "deploy",
                "perform CodeQL analysis",
                "upload artifacts",
                "upload test report",
                "create pull request"
              ]
            }
          }
        }
      },
      {
        "type": "Package",
        "pattern": "package.json",
        "options": {
          "keywords": {
            "auth-provider": "auth-provider",
            "repository-provider.+": "repository-provider",
            "interceptor.+": "kronos-interceptor",
            "service-": "kronos-service"
          }
        }
      },
      {
        "type": "MergeLineSet",
        "pattern": ".npmignore",
        "options": {
          "messagePrefix": "chore(npm): ",
          "ignore": [
            "",
            "README*",
            "CHANGELOG*",
            "package.json",
            "LICENCE",
            "LICENSE",
            "node_modules",
            ".*.swp",
            "._*",
            ".DS_Store",
            ".git",
            ".hg",
            ".npmrc",
            ".lock-wscript",
            ".svn",
            ".wafpickle-*",
            "config.gypi",
            "CVS",
            "npm-debug.log"
          ]
        }
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "npm",
              "icon": "https://img.shields.io/npm/v/{{fullName}}.svg",
              "url": "https://www.npmjs.com/package/{{fullName}}",
              "order": 0.1
            },
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{fullName}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{fullName}}@{{version}}",
              "order": 0.12
            },
            {
              "icon": "https://deno.bundlejs.com/?q={{fullName}}&badge=detailed",
              "url": "https://bundlejs.com/?q={{fullName}}",
              "name": "bundlejs",
              "order": 0.13
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{fullName}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{fullName}}",
              "order": 0.14
            }
          ]
        }
      }
    ],
    "inheritFrom": [
      "arlac77/template-root"
    ],
    "usedBy": [
      "arlac77/mf-hosting",
      "arlac77/mf-hosting-cloudflare",
      "arlac77/mf-hosting-frontend",
      "arlac77/template-bitdiver",
      "arlac77/template-openapi",
      "arlac77/template-web-app",
      "arlac77/template-web-component",
      "arlac77/template-node-app",
      "arlac77/template-node-component"
    ]
  }
}
